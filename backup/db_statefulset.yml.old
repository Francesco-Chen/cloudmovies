---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: moviedb
  namespace: cloudmovies
  labels:
    app.kubernetes.io/name: moviedb
spec:
  serviceName: mysql
  selector:
    matchLabels:
      app.kubernetes.io/name: mysql
  replicas: 1
  template:
    metadata:
      labels:
        app.kubernetes.io/name: mysql
    spec:
      terminationGracePeriodSeconds: 30
      containers:
        - name: mysqld
          image: mysql:8.0
          ports:
            - name: mysqld
              containerPort: 27017
              protocol: TCP
          volumeMounts:
            - name: data-db
              mountPath: /var/lib/mysql
            - name: init-db
              mountPath: /docker-entrypoint-initdb.d
          env:
            - name: MYSQL_ROOT_PASSWORD
              value: "pwdroot"
            - name: MYSQL_DATABASE
              value: "movie_db"
            - name: MYSQL_USER
              value: "movie_db_user"
            - name: MYSQL_PASSWORD
              value: "movie_db_pwd"
      volumes:
        - name: init-db
          configMap:
            name: dbconfigmap
  volumeClaimTemplates:
  - metadata:
      name: data-db
    spec:
      accessModes:
        - ReadWriteOnce
      storageClassName: standard
      resources:
        requests:
          storage: 0.5Gi
